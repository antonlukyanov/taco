    \hline
    {% for col in settings['columns'] %}
        \multicolumn{1}{ {{ '|' if loop.first }}{{ col['header_col_def'] }}| }{
            \ss
            {% if col['field'] == 'INDEX' %}
                {{ col['name'].replace('â„–', '\\No~') }}
            {% else %}
                {{ col['name'] }}
            {% endif %}
        }

        {% if not loop.last %}
            &
        {% else %}
            \\
        {% endif %}

    {% endfor %}

    {% for art in tbl.rows %}
    \hline
        {% set outer = loop %}
        {% for col in settings['columns'] %}
